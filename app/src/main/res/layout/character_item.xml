<!-- res/layout/character_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Character Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Height"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/massTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Mass"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/skinColorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Skin Color"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/eyeColorColorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Eye Color"
        android:textSize="16sp"
        android:textStyle="normal" />

    <!-- Add other UI elements for character details -->

</LinearLayout>
